<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.oa.dao.FileDao">
	<resultMap type="com.example.oa.domain.File" id="fileInfo">
		<result property="fileid" column="fileid" />
		<result property="filename" column="filename" />
		<result property="filesize" column="filesize" />
		<result property="fileuploadtime" column="fileuploadtime" />
		<result property="employee_id" column="employee_id" />
		<result property="uploaderName" column="username" />
		<result property="file_location" column="file_location" />
	</resultMap>
	<!-- 插入文件信息 -->
	<insert id="addFile" parameterType="com.example.oa.domain.File">
		INSERT INTO `file`
		(filename,
		filesize, fileuploadtime, employee_id,
		file_location) VALUES
		(#{filename},
		#{filesize},now(),#{employee_id},
		#{file_location})
	</insert>
	<!-- 修改文件信息 -->
	<update id="updateFile" parameterType="com.example.oa.domain.File">
		update file set
		filename=#{filename},employee_id=#{employee_id} where fileid=#{fileid}
	</update>
	<!-- 删除文件信息 -->
	<delete id="deleteFile" parameterType="com.example.oa.domain.File">
		delete from file where
		fileid=#{fileid}
	</delete>
	<!-- 通过ID查找文件信息 -->
	<select id="selectFileById" resultMap="fileInfo">
		SELECT
		f.fileid,
		f.filename,
		f.filesize,
		f.fileuploadtime,
		e.username,
		f.file_location
		FROM
		file f,
		employee e
		WHERE
		e.employee_id = f.employee_id
		AND f.fileid =
		#{fileid}
	</select>
	<!-- 查找所有文件信息 -->
	<select id="getallFile" resultMap="fileInfo">
		SELECT
		f.fileid,
		f.filename,
		f.filesize,
		f.fileuploadtime,
		e.username,
		f.file_location
		FROM
		file f,
		employee e
		WHERE
		e.employee_id = f.employee_id
		ORDER BY
		f.fileid
	</select>
	<select id="getFileLocation" parameterType="java.lang.Integer"
		resultType="java.lang.String">
		SELECT f.file_location
		FROM file f
		WHERE f.fileid=#{ID}
	</select>
</mapper>